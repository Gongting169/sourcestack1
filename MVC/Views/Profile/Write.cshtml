@model MVC.Models.ProfileWriteModel
@{
    ViewBag.Title = "Write";
    int[] years = new int[67];
    for (int i = 0; i < 67; i++)
    {
        years[i] = 2023-i;
    }
    int[] months = new int[12];
    for (int i = 0; i < 12; i++)
    {
        months[i] = i + 1;
    }
}
<main>
    <div class="container" style="margin-top:100px">
        <div class="row ">
            <h2 class="col-12">
                <i class="fa fa-user-circle-o"></i>
                个人资料
            </h2>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-5 col-md-5">
                <form method="post" style="margin-top:16px">
                    <div class="form-group">
                        <label>头像：（* 仅限jpg/png/gif）</label>
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.UserPhoto, new { @class = "form-control", placeholder = "页面提交时上传文件", aria_describedby = "basic-addon2" })
                            <span class="input-group-addon" id="basic-addon2">浏览</span>
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <label>性别：</label>
                        <div class="form-inline">                         
                            <label class="form-check-label" for="Isfemal">
                                @Html.RadioButtonFor(m => m.IsMale, true)  男
                            </label>
                        </div>
                        <div class="form-inline">
                            <label class="form-check-label" for="Isfemal">
                              @Html.RadioButtonFor(m=>m.IsMale,false)  女
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>生日：</label>
                        <div class="input-group">
                            @Html.DropDownListFor(m => m.BirthYear, new SelectList(years), "----", new { @class = "form-control" })
                            <span class="input-group-append">
                                <span class="input-group-text" style="border-radius:0px">年</span>
                            </span>
                            @Html.DropDownListFor(m => m.BirthMonth, new SelectList(months), "----", new { @class = "form-control" })
                            <span  class="input-group-append">
                                <span class="input-group-text" style="border-radius:0px">月</span>
                            </span>
                            @Html.EnumDropDownListFor(m=>m.Constellation)
                            <div class="input-group-append">
                                <span class="input-group-text">星座</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>关键字：（* 使用空格分隔）</label><br />
                        <span class="badge badge-pill">Python</span>
                        <span class="badge badge-pill">编程开发语言</span>
                        <span class="badge badge-pill">C#</span>
                        <span class="badge badge-pill">单位</span>
                        <span class="badge badge-pill">Excel</span>
                        <span class="badge badge-pill">工具软件</span>
                        <span class="badge badge-pill">DF</span>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="btn-group input-group-prepend">
                                <button type="button" class="btn btn-light">--一级--</button>
                                <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                            </div>
                            <div class="btn-group input-group-prepend">
                                <button type="button" class="btn btn-light">--二级--</button>
                                <button type="button" class="btn btn-light dropdown-toggle dropdown-toggle-split" data-toggle="dropdown">
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                            </div>
                            <input type="text" class="form-control" placeholder="自定义关键字，使用空格分隔">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>自我介绍:</label>
                        @Html.TextAreaFor(m=>m.SelfIntroduction,new {@class="form-control",rows = "4",placeholder = "简单的介绍一下自己吧，不超过255字" })
                    </div>
                    <button type="submit" class="btn btn-primary">提交</button>
                </form>
            </div>
            <div class="col-lg-6 col-md-5 " style=" margin-left:40px">
                <div class="container" style="margin-bottom:16px"></div>
                <h3>
                    <i class="fa fa-question-circle" aria-hidden="true"></i>
                    说明
                </h3>
                <ol>
                    <li style="margin-bottom:10px">头像仅接受jpg/png/gif格式，大小不超过256KB。</li>
                    <li style="margin-bottom:10px">头像图片的建议宽度为300像素左右，过宽或过窄都有可能失真。</li>
                    <li style="margin-bottom:10px">头像图片的建议宽度为300像素左右，过宽或过窄都有可能失真。</li>
                </ol>
            </div>
        </div>
        <hr />
    </div>
</main>

