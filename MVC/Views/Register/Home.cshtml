@model  MVC.Models.RegisterModel
@{
    ViewBag.Title = "注册.一起帮";
}
<style>
    .field-validation-error {
        color: red;
        font-size: 10px;
    }

    .field-validation-error {
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
    }
        .field-validation-error::before {
            content: "\f056";
        }
</style>
<div class="container">
    <h1 class="text-info " style="margin-top:30px;margin-bottom :10px;">
        <span class="fa fa-registered" aria-hidden="true"></span>
        注册
    </h1>
    <hr />
</div>
<div class="container">
    <div class="row">
        <div class="col-md-5 ">
            @using (Html.BeginForm("Home", "Register", FormMethod.Post))
            {
                <div class="form-group mt-4" style="border:1px dashed ;border-radius :5px; background-color :#ffffe0 ;padding :0 10px 0 10px;">
                    <div class="text-right" style="padding-top :10px">
                        <a href="/FAQ/Account#invite" target="blank ">
                            <span class="fa fa-question-circle" aria-hidden="true"></span>
                            为什么需要邀请
                        </a>
                    </div>
                    <div class="form-group">
                        <label>邀请人:(*必填）</label>
                        <a href="/User/Inviters" title="点击由系统推荐">没有邀请人</a>
                        @Html.TextBoxFor(m => m.InvitedBy.Name, new { @class = "form-control", placeholder = "他的用户名，模糊查询只能从头开始" })
                        @Html.ValidationMessageFor(m => m.InvitedBy.Name)
                    </div>
                    <div style="margin-top :30px;" class="form-group ">
                        <label>邀请码:(*必填）</label>
                        @Html.TextBoxFor(m => m.InvitedBy.InvitedCode, new { @class = "form-control", placeholder = "4位数字" })
                        @Html.ValidationMessageFor(m => m.InvitedBy.InvitedCode)
                    </div>
                </div>
                <div class="form-group">
                    <label>用户名:(*必填）</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "登录用户名，可修改，不能重复" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group">
                    <label>密码:(*必填）</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "不少于4个字符" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group ">
                    <label>验证密码:(*必填）</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "和密码相同" })
                    @Html.ValidationMessageFor(m => m.ComfirmPassword)
                </div>
                <div class="form-group ">
                    <label>验证码:(*必填）</label>
                    @Html.TextBoxFor(m => m.Captcha, new
                    {
                        id = "inputcaptcha",
                        style = "width :100px",
                        size = "4",
                        @class = "form-control d-inline"
                    })
                    @Html.ValidationMessageFor(m => m.Captcha)
                    <span class="ml-3">点击输入框显示</span>
                    <br />
                </div>
                <input type="submit" class="btn btn-primary" value="提交" />
                <input type="reset" class="btn btn-light" value="重置" />
                <a href="/Log/On?prepage=%2fRegister%2f" class="btn float-right">
                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                    登录
                </a>
            }
        </div>
        <div class="col-md-6 col-md-offset-1">
          @Html.Partial("RegisterPartial")
        </div>
    </div>
    <hr />
</div>
